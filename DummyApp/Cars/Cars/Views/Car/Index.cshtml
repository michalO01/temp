@model IEnumerable<Cars.Models.Car>


<div class="row p-4">
    <div class="col-6">
        <h2 class="text-primary">Car list</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-controller="Car" asp-action="Create" class="btn btn-primary">
        Add car to list
        </a>
    </div>


    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Car Name
                    </th>
                    <th>
                        Production date
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var obj in Model)
                {
                    <tr>
                        <td width="50%">@obj.Name</td>
                        <td width="30%">@obj.ProductionDate</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Car" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2">
                                    Edit
                                </a>
                                <a asp-controller="Car" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                    Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> No cars on list</p>
    }

</div>
